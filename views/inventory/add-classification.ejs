<% if (title){ %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<div class="forms">
    <form action="/inv/add-classification" method="post">
        <p>Classification names cannot contain any spaces or special characters.</p>
        <label for="class">New classification name:</label>
        <input type="text"
               id="class"
               name="classification_name"
               required
               pattern="^[a-zA-Z0-9]+$"
        >
        <button type="submit">Add Classsification</button>
    </form>
</div>
