<% if (title){ %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<div class="forms">
    <form id="updateForm" action="/inv/update" method="post">
        <label for="make">Make</label>
        <input type="text" id="make" name="inv_make" required value="<%= locals.inv_make %>">
        <label for="model">Model</label>
        <input type="text" id="model" name="inv_model" required value="<%= locals.inv_model %>">
        <label for="year">Year</label>
        <input type="text" id="year" name="inv_year" required value="<%= locals.inv_year %>">
        <label for="description">Description</label>
        <input type="text" id="description" name="inv_description" required value="<%= locals.inv_description %>">
        <label for="image">Image URL</label>
        <input type="text" id="image" name="inv_image" required value="<%= locals.inv_image %>">
        <label for="thumbnail">Thumbnail URL</label>
        <input type="text" id="thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">
        <label for="price">Price</label>
        <input type="number" id="price" name="inv_price" required value="<%= locals.inv_price %>">
        <label for="miles">Miles</label>
        <input type="text" id="miles" name="inv_miles" required value="<%= locals.inv_miles %>">
        <label for="color">Color</label>
        <input type="text" id="color" name="inv_color" required value="<%= locals.inv_color %>">
        <label for="classificationList">Classification</label>
        <%- classificationList %>
        <button disabled type="submit">Update Vehicle</button>
        <input
            type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>
        >
    </form>
</div>
<script src="../../js/inv-update.js"></script>
